# GoalTrajectory.AI - Production Environment Configuration
# Root-level environment file for Docker Compose and production deployment
# IMPORTANT: Replace all placeholder values with actual production credentials

# Environment
ENVIRONMENT=production
COMPOSE_PROJECT_NAME=goaltrajectory-prod

# Application URLs - REPLACE WITH ACTUAL PRODUCTION URLS
FRONTEND_URL=https://goaltrajectory.ai
BACKEND_URL=https://api.goaltrajectory.ai
API_URL=https://api.goaltrajectory.ai

# Database Configuration - REPLACE WITH PRODUCTION DATABASE
POSTGRES_DB=goaltrajectory_prod
POSTGRES_USER=your_production_db_user
POSTGRES_PASSWORD=your_production_db_password_here
POSTGRES_HOST=production-db-host
POSTGRES_PORT=5432
DATABASE_URL=postgresql://your_production_db_user:your_production_db_password@production-db-host:5432/goaltrajectory_prod

# Supabase Configuration - REPLACE WITH PRODUCTION PROJECT
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_ANON_KEY=your_production_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# ChromaDB Configuration - Production
CHROMA_HOST=chromadb-service
CHROMA_PORT=8000
CHROMA_PERSIST_DIR=/data/chroma
USE_PERSISTENT_CHROMADB=true

# Redis Configuration - Production
REDIS_URL=redis://redis-service:6379
REDIS_HOST=redis-service
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_production_redis_password_here

# AI Service Configuration - REPLACE WITH PRODUCTION KEYS
HF_TOKEN=your_production_huggingface_token_here
GEMINI_API_KEY=your_production_gemini_api_key_here
OPENROUTER_API_KEY=your_production_openrouter_api_key_here

# NextAuth Configuration - Production
NEXTAUTH_URL=https://goaltrajectory.ai
NEXTAUTH_SECRET=your_production_nextauth_secret_minimum_32_characters_here

# OAuth Configuration - Production - REPLACE WITH PRODUCTION CREDENTIALS
GOOGLE_CLIENT_ID=your_production_google_client_id_here
GOOGLE_CLIENT_SECRET=your_production_google_client_secret_here

# Production-specific settings
DEBUG=false
LOG_LEVEL=INFO
NODE_ENV=production
FASTAPI_ENV=production

# Production Resource Configuration
MAX_FILE_SIZE=52428800  # 50MB
CHROMA_MAX_MEMORY=2GB

# Production Security
JWT_SECRET_KEY=your_production_jwt_secret_key_minimum_32_characters_here
RATE_LIMIT_ENABLED=true

# Production Feature Flags
ENABLE_DOCS=false
ENABLE_METRICS=true
ENABLE_PROFILER=false
ANONYMIZED_TELEMETRY=false

# Production Monitoring - REPLACE WITH ACTUAL CREDENTIALS
SENTRY_DSN=your_production_sentry_dsn_here
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# Production SSL/TLS
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/goaltrajectory.crt
SSL_KEY_PATH=/etc/ssl/private/goaltrajectory.key

# Production Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=goaltrajectory-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# Production CDN Configuration
CDN_URL=https://cdn.goaltrajectory.ai
STATIC_ASSETS_URL=https://cdn.goaltrajectory.ai

# Production Load Balancer
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_PATH=/health
HEALTH_CHECK_INTERVAL=30

# Production Scaling Configuration
MIN_REPLICAS=2
MAX_REPLICAS=10
CPU_THRESHOLD=70
MEMORY_THRESHOLD=80

# Production Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30