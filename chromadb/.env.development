# ChromaDB - Development Environment Configuration
# This file contains development-specific settings for ChromaDB

# Environment
ENVIRONMENT=development

# Server Configuration
CHROMA_SERVER_HOST=0.0.0.0
CHROMA_SERVER_HTTP_PORT=8000
CHROMA_SERVER_CORS_ALLOW_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Logging Configuration - Development
CHROMA_LOG_LEVEL=DEBUG
CHROMA_LOG_CONFIG_PATH=
CHROMA_LOG_FILE=

# Storage Configuration - Development
CHROMA_PERSIST_DIRECTORY=/chroma/chroma
CHROMA_IS_PERSISTENT=true

# Performance Configuration - Development
CHROMA_MAX_MEMORY=512MB
CHROMA_SEGMENT_CACHE_POLICY=LRU
CHROMA_SEGMENT_CACHE_SIZE=100

# Development-specific settings
CHROMA_ALLOW_RESET=true
CHROMA_ANONYMIZED_TELEMETRY=false

# Authentication - Development (Disabled)
CHROMA_SERVER_AUTHN_CREDENTIALS=
CHROMA_SERVER_AUTHN_PROVIDER=

# Development Resource Limits
CHROMA_COLLECTION_LIMIT=1000
CHROMA_BATCH_SIZE=1000
CHROMA_MAX_BATCH_SIZE=5000

# Development Monitoring
CHROMA_METRICS_ENABLED=false
CHROMA_PROFILING_ENABLED=true