# ChromaDB - Production Environment Configuration
# This file contains production-specific settings for ChromaDB

# Environment
ENVIRONMENT=production

# Server Configuration - Production
CHROMA_SERVER_HOST=0.0.0.0
CHROMA_SERVER_HTTP_PORT=8000
CHROMA_SERVER_CORS_ALLOW_ORIGINS=["https://goaltrajectory.ai", "https://api.goaltrajectory.ai"]

# Logging Configuration - Production
CHROMA_LOG_LEVEL=INFO
CHROMA_LOG_CONFIG_PATH=/chroma/config/logging.yaml
CHROMA_LOG_FILE=/chroma/logs/chroma.log

# Storage Configuration - Production
CHROMA_PERSIST_DIRECTORY=/data/chroma
CHROMA_IS_PERSISTENT=true

# Performance Configuration - Production
CHROMA_MAX_MEMORY=2GB
CHROMA_SEGMENT_CACHE_POLICY=LRU
CHROMA_SEGMENT_CACHE_SIZE=1000

# Production Security
CHROMA_ALLOW_RESET=false
CHROMA_ANONYMIZED_TELEMETRY=false

# Authentication - Production (Configure as needed)
CHROMA_SERVER_AUTHN_CREDENTIALS=
CHROMA_SERVER_AUTHN_PROVIDER=

# Production Resource Limits
CHROMA_COLLECTION_LIMIT=10000
CHROMA_BATCH_SIZE=5000
CHROMA_MAX_BATCH_SIZE=10000

# Production Monitoring
CHROMA_METRICS_ENABLED=true
CHROMA_PROFILING_ENABLED=false

# Production Performance Tuning
CHROMA_WORKER_THREADS=4
CHROMA_MAX_CONCURRENT_REQUESTS=100
CHROMA_REQUEST_TIMEOUT=30

# Production Backup Configuration
CHROMA_BACKUP_ENABLED=true
CHROMA_BACKUP_SCHEDULE=0 3 * * *  # Daily at 3 AM
CHROMA_BACKUP_RETENTION_DAYS=30

# Production Health Check
CHROMA_HEALTH_CHECK_INTERVAL=30
CHROMA_HEALTH_CHECK_TIMEOUT=10